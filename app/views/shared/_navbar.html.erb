<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%#= cl_image_tag current_user.studio.photo %>
    <%= image_tag "logo_MysoreZurich.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

    <% if user_signed_in? %>
      <div class="d-flex flex-grow-1 justify-content-between">
        <%= link_to studio_path(current_user.studio), class: "navbar-icon-text mt-3 flex-grow-1" do %>
          <p><%= image_tag 'Yoga-icon-shala.png', class: "navbar-icon" %>     Shala space</p>
        <% end %>
        <%= link_to personal_dashboard_path, class: "navbar-icon-text mt-3 flex-grow-1" do %>
          <p><%= image_tag 'Yoga-icon-yogi.png', class: "navbar-icon" %>     Yogi space</p>
        <% end %>
        <%= link_to community_path(current_user.studio), class: "navbar-icon-text mt-3 flex-grow-1" do %>
          <p><%= image_tag 'Yoga-icon-community.png', class: "navbar-icon" %>     Community space</p>
        <% end %>
        <% if current_user.is_admin? %>
          <%= link_to admin_dashboard_path, class: "navbar-icon-text mt-3 flex-grow-1" do %>
            <p><%= image_tag 'Yoga-icon-admin.png', class: "navbar-icon" %>     Admin space</p>
          <% end %>
        <% end %>
      </div>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item dropdown">
              <%= cl_image_tag current_user.photo, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to "My Profile", personal_dashboard_path, class: "dropdown-item" %>
                <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              </div>
            </li>
        </ul>
      <% else %>
        <div class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </div>
      <% end %>
  </div>
</div>
