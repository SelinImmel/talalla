<div class="row">
  <div class="col-3">
    <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
      <% @categories.each do |cat| %>
          <a class="nav-link" id="v-pills-<%= cat.id %>-tab" data-toggle="pill" href="#v-pills-<%= cat.id %>" role="tab" aria-controls="v-pills-<%= cat.id %>" aria-selected="true"><%= cat.title %></a>
      <% end %>
    </div>
  </div>
  <div class="col-9">
    <div class="tab-content" id="v-pills-tabContent">
      <% @categories.each do |cat| %>
        <div class="tab-pane fade show" id="v-pills-<%= cat.id %>" role="tabpanel" aria-labelledby="v-pills-<%= cat.id %>">
          <%= render "category_posts", category: cat %>
        </div>
      <% end %>
    </div>
  </div>
</div>



























