
<div class="container main-container">
  <div class="left-pannel">
    <div class="first-card">
      <h2>Upcomming lessons</h2>
      <hr>
        <% if @lessons.exists? %>
          <% @lessons = Lesson.where(start_date: Date.today) %>
            <div><%= Date.today.to_formatted_s(:short) %></div>
          <% end %>
          <% @lessons.each do |l| %>
            <%= link_to l.name, lesson_path(l.id) %>
            <%= l.location %>
            <%= l.content %>
          <% end %>

        <% if @lessons.exists? %>
          <% @lessons = Lesson.where(start_date: Date.tomorrow) %>
            <h3>List of tomorrows lessons - <%= Date.tomorrow.to_formatted_s(:short) %></h3>
          <% end %>
          <% @lessons.each do |l| %>
            <%= link_to l.name, lesson_path(l.id) %>
            <%= l.location %>
            <%= l.content %>
            <%= l.slots %>
          <% end %>
    </div>
  </div>
  <div class="right-pannel">
    <div class="second-card-studio">
      <h2>Our teachers</h2>
      <hr>
      <div class="teacher-cards">
        <% users = User.where(is_teacher: true) %>
        <% users.each_with_index do |u, index| %>
          <!-- if index === 1 then add id="highlight" -->
          <div class="teacher-card">
            <div class="avatar-large"><%= cl_image_tag u.photo%>
            </div>
            <div class="teacher-name"><%= u.first_name %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

        <%#= link_to "See all upcoming events - event index", studio_events_path(@studio), class: "btn btn-outline-primary btn-sm" %>
  <div class="third-card">
    <h2>Upcomming events</h2>
    <hr>
    <div class="event-cards">
      <% @events.each do |e| %>
        <div class="event-card">
          <div class="event-photo"><%= cl_image_tag e.photo, height: 144, width: 160, crop: :fill%>
          </div>
          <div class="event-title"><%= link_to e.title, studio_event_path(@studio, e)%></div>
          <div class="event-date"><%= e.date.to_formatted_s(:rfc822) %></div>
        </div>
      <% end %>
    </div>
    </div>
  </div>
</div>

