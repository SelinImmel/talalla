<div class="subscription-container">
  <div class="col9">
  </div>
  <div class="col10">
  <h1 class="d-flex justify-content-center mb-3">Add your subscription type</h1>
  <%= simple_form_for([@studio, @subscription]) do |f| %>
    <%= f.input :name%>
    <%= f.input :content %>
    <%= f.input :durability, label: "Valid until", hint: "Number of days, e.g. 30"%>
    <%= f.input :package_size %>
    <%= f.input :amount %>
    <%= f.input :payment_option, as: :select, collection: ["cash", "card"] %>
    <%= f.button :submit %>
  <% end %>
  <%= link_to "Back", admin_dashboard_path %>
</div>

