<div class="container">
  <h1>Personal dashboard</h1>

  <div class="personal-details">
    <h2>Account</h2><hr>
    <img src="" alt="avatar" class="rounded-circle"><hr>
    <%= current_user.first_name %><br>
    <%= current_user.last_name %><br>
    <%= current_user.address %><br>
    <%= current_user.email %><br><br>
    <%= link_to 'Edit', edit_user_registration_path, class: "btn btn-primary" %>
  </div>

  <div class="user-plan">
    <h2>Plans</h2>
    <ul>
      <% @plans.each do |user_plan| %>
      <li>
        <%= user_plan.order.subscription.name %>
        Left usage:
        <%= user_plan.left_usage %>
      </li>
      <% end %>
    </ul>
    
  </div><hr>

  <div class="calendar">

    <h2>Calendar</h2>
    <div class="w-50">
      <%= month_calendar(events: current_user.notes, attribute: :created_at) do |date, notes| %>
      <%= date.day %>
      <p>
      <% notes.each do |note| %>
        <a href="#note-<%= note.id %>"><%= note.title %></a>
      </p>
      <% end %>
      <% end %>
    </div>
  </div><hr>

  <div class="notes">
    <h2>Notes</h2>
    <%= simple_form_for @note do |f| %>
      <%= f.input :title %>
      <%= f.input :content %>
      <%= f.submit 'Add a note', class: 'btn btn-primary' %>
    <% end %><hr>
    <% current_user.notes.each do |note| %>
      <p id="note-<%= note.id %>"><%= note.id %>: <%= note.content %></p>
    <% end %>
</form>
</div>
</div>
