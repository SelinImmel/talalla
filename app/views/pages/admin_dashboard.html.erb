  <h1 class="mt-3 mr-3 anga">Admin dashboard</h1>
  <div class="welcome-yo"></div>
  <h2 class="text-center">Welcome <%= current_user.first_name %>!</h2>
</div>
<div class="dashboard-container">
  <div class="text-center">
    <h3>Upcoming classes at the Shala</h3>
    <div class="upcoming-classes-container">
      <table>
        <% @dates.each do |date| %>
        <tr>
          <th><%= date.strftime("%b %d, %Y") %></th>
        </tr>
        <% @lessons.where(start_date: date).each do |lesson|  %>
        <tr>
          <td><%= lesson.name %></td>
          <td><%= lesson.start_time.strftime("%H:%M") %></td>
          <td><%= lesson.user.first_name %></td>
          <td><%= lesson.bookings.count %> bookings</td>
        </tr>
        <% end %>
        <% end %>
      </table>
    </div>
  </div>
  <div class="events-and-studio-container">
    <div class="text-center">
      <h3>This month at the Shala</h3>
      <div class="events-container">

        <div class="row text-center">
          <div class="col-lg shala-yogis">
            <p><%= @students.count %></p>
            <h6><strong>Yogis</strong></h6>
          </div>
          <div class="col-lg shala-teachers">
            <p><%= @teachers.count %></p>
            <h6><strong>Teachers</strong></h6>
          </div>
          <div class="col-lg shala-revenues">
            <p><%= @revenues %></p>
            <h6><strong>Revenues</strong></h6>
          </div>
          <div class="col-lg shala-lessons">
            <p><%= @lessons_monthly.count %></p>
            <h6><strong>Lessons</strong></h6>
          </div>
        </div>
        <div class="text-center">
         <%= link_to "More Information", students_path, class: "btn btn-outline-primary" %>
       </div>
     </div>


     <div class="studio-info-container">
      <div class="row">
        <div class="col-sm-4 rich">
          <div class="dash-manage">
            <div>
              <i class="fas fa-vihara"></i>
              <!-- <img src="avatar.png" alt="shala" class="avatar"> -->
              <!-- <p>manage studio information</p> -->
              <div class="text-center">
               <%= link_to "Studio", studio_path(current_user.studio_id), class: "btn btn-outline-primary" %>
             </div>
           </div>
         </div>
       </div>

       <div class="col-sm-4 rich">
        <div class="dash-manage">
          <div>
            <i class="fas fa-om"></i>            <!-- <img src="avatar.png" alt="teachers" class="avatar"> -->
            <!-- <p>manage teachers</p> -->
            <div class="text-center">
             <%= link_to "Teachers", teachers_path, class: "btn btn-outline-primary" %>
           </div>
         </div>
       </div>
     </div>

     <div class="col-sm-4 rich">
      <div class="dash-manage">
        <div>
          <i class="fas fa-user-graduate"></i>          <!-- <img src="avatar.png" alt="students" class="avatar"> -->
          <!-- <p>manage students</p> -->
          <div class="text-center">
            <%= link_to "Students", students_path, class: "btn btn-outline-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4 rich">
      <div class="dash-manage">
        <div>
          <i class="fas fa-calendar-week"></i>          <!-- <img src="avatar.png" alt="events" class="avatar"> -->
          <!-- <p>manage & view events</p> -->
          <div class="text-center p-3">
            <%= link_to "Events", new_studio_event_path(current_user.studio_id), class: "btn btn-outline-primary" %>
          </div>
        </div>
      </div>
    </div>

    <div class="col-sm-4 rich">
      <div class="dash-manage">
        <div>
          <i class="fas fa-dharmachakra"></i>          <!-- <img src="avatar.png" alt="lessons" class="avatar"> -->
          <!-- <p>manage & view lessons</p> -->
          <div class="text-center p-3">
            <%= link_to "Lessons", new_lesson_path, class: "btn btn-outline-primary" %>
          </div>
        </div>
      </div>
    </div>

    <div class="col-sm-4 rich">
      <div class="dash-manage">
        <div>
          <i class="fas fa-praying-hands"></i>          <!-- <img src="avatar.png" alt="subscriptions" class="avatar"> -->
          <!-- <p> manage subs & bookings</p> -->
          <div class="text-center p-3">
            <%= link_to "Subscriptions", new_studio_subscription_path(current_user.studio_id), class: "btn btn-outline-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
</div>
