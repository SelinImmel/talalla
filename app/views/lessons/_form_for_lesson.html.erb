<%= simple_form_for [@lesson] do |f| %>
<%= f.input :name, placeholder: "Add a name for the lesson..." %>
<%= f.input :location, placeholder: "What room is the lesson in..." %>
<%= f.input :content, placeholder: "Add a detailed description of the lesson..." %>
<%= f.input :slots, placeholder: "How many people can participate..." %>
<%= f.input :start_time, as: :datetime %>
<%= f.input :end_time, as: :datetime %>
<%= f.input :occurrence, placeholder: "daily, weekly, monthly..." %>
<%#= f.association :user, collection: User.where(:is_teacher) %>
<%= f.submit 'Save',  class: "btn btn-primary"%>
<% end %>
