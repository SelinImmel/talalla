<div class="container">
  <h1>This is the lesson show page</h1>
    <br>
    ------------------------------------------

  <p><b>Name: </b>       <%= @lesson.name %></p>
  <p><b>Room: </b>       <%= @lesson.location %></p>
  <p><b>Description: </b><%= @lesson.content %></p>
  <p><b>Places: </b>     <%= @lesson.slots %></p>
  <p><b>Time: </b>       <%= @lesson.time %></p>
  <p><b>When: </b>       <%= @lesson.occurrence %></p>

<br>  <%= link_to "Edit", edit_lesson_path(@lesson),class: "btn btn-outline-primary btn-sm" %>
<br>  <%= link_to "Delete", lesson_path(@lesson), class: "btn btn-outline-primary btn-sm", method: :delete %>
<br>
  <%= link_to "Back to lesson index", studio_lessons_path(@lesson), class: "btn btn-outline-primary btn-sm" %>

</div>


